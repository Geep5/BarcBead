{
  "manifest_version": 3,
  "name": "Barc - Decentralized Page Chat",
  "version": "1.0.0",
  "description": "Chat with others viewing the same webpage using Nostr",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "alarms"
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "dist/background.js",
    "type": "module"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
